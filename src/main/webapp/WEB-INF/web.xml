<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>IssueLite</display-name>

    <welcome-file-list>
        <welcome-file>list</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>br.com.issuelite.controller.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>HealthCheckServlet</servlet-name>
        <servlet-class>br.com.issuelite.controller.HealthCheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HealthCheckServlet</servlet-name>
        <url-pattern>/health</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>br.com.issuelite.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CadastroServlet</servlet-name>
        <servlet-class>br.com.issuelite.controller.CadastroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastroServlet</servlet-name>
        <url-pattern>/cadastro</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>br.com.issuelite.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListIssueServlet</servlet-name>
        <servlet-class>br.com.issuelite.controller.ListIssueServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListIssueServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateIssueServlet</servlet-name>
        <servlet-class>br.com.issuelite.controller.CreateIssueServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateIssueServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditIssueServlet</servlet-name>
        <servlet-class>br.com.issuelite.controller.EditIssueServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditIssueServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

</web-app>